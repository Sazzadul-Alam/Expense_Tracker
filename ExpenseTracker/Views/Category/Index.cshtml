@model List<ExpenseTracker.DB.Model.ExpenseCategory>

<h1>Categories</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.ID</td>
                <td>@category.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.ID">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.ID">Delete</a> 
                   
                </td>
            </tr>
        }
    </tbody>
</table>
